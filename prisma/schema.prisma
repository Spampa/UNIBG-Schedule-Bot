// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username    String   @id
  chat        BigInt   @unique
  lastMessage String
  time        DateTime @default(now())
  course      Course?  @relation(fields: [courseId, annoId], references: [courseId, annoId])
  courseId    String?
  annoId      String?
}

model School {
  schoolId   String       @id
  name       String
  Department Department[]
}

model Department {
  departmentId Int      @id @default(autoincrement())
  name         String   @unique
  school       School   @relation(fields: [schoolId], references: [schoolId])
  schoolId     String
  Course       Course[]
}

model Course {
  courseId String
  annoId   String
  anno     Int

  department   Department @relation(fields: [departmentId], references: [departmentId])
  departmentId Int

  User     User[]
  Schedule Schedule[]

  @@id([courseId, annoId])
}

model Schedule {
  id Int @id @default(autoincrement())

  subject      String
  Course       Course @relation(fields: [courseId, courseAnnoId], references: [courseId, annoId])
  courseId     String
  courseAnnoId String
  date         String
  time         String

  classroom  String
  teacher    String
  isCanceled Boolean
  week       Int

  @@unique([subject, courseId, courseAnnoId, date, time])
}
